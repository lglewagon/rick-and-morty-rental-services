<h1>Your current booking ü™ê </h1>

    <div class= "container">
        <div class="row">
            <div class="col ">
                <div class="card">
                    <% character = Character.find(params["character_id"]) %>
                            <div class="card-img-top">
                              <% if Character.find(params["character_id"]).category == 'Rick' %>
                                <% if File.file? "#{Rails.root}/app/assets/images/#{character.photo_url}.jpg" %>
                                  <%= image_tag ("#{character.photo_url}.jpg"), id: 'img' %>
                                <% elsif File.file? "#{Rails.root}/app/assets/images/#{character.photo_url}.png" %>
                                   <%= image_tag ("#{character.photo_url}.png"), id: 'img' %>
                                <% end %>
                              <% elsif Character.find(params["character_id"]).category == 'Morty' %>
                                <% if File.file? "#{Rails.root}/app/assets/images/#{character.photo_url}.jpg" %>
                                  <%= image_tag ("#{character.photo_url}.jpg"), id: 'img' %>
                                <% elsif File.file? "#{Rails.root}/app/assets/images/#{character.photo_url}.png" %>
                                   <%= image_tag ("#{character.photo_url}.png"), id: 'img' %>
                                <% end %>
                              <% end %>
                            </div>

                        <h5><%= character.name %> </h5>
                        <h6><%= character.description %> </h6>
                            <div class="btn btn-primary">
                                <%= link_to "Description", character_path(character, source:"character_show")%>
                            </div>
                </div>
            </div>
            <div class="col">
                <div class="card">
                    <% associated_character = Character.find(params["associated_character_id"]) %>
                            <div class="card-img-top">
                                <div>
                                  <% if Character.find(params["associated_character_id"]).category == 'Rick' %>
                                    <% if File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.jpg" %>
                                      <%= image_tag ("#{associated_character.photo_url}.jpg"), id: 'img' %>
                                    <% elsif File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.png" %>
                                       <%= image_tag ("#{associated_character.photo_url}.png"), id: 'img' %>
                                    <% end %>
                                  <% elsif Character.find(params["associated_character_id"]).category == 'Morty' %>
                                    <% if File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.jpg" %>
                                      <%= image_tag ("#{associated_character.photo_url}.jpg"), id: 'img' %>
                                    <% elsif File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.png" %>
                                       <%= image_tag ("#{associated_character.photo_url}.png"), id: 'img' %>
                                    <% end %>
                                  <% end %>
                                </div>
                            <h5><%= associated_character.name %> </h5>
                            <h6><%= associated_character.description %> </h6>
                            <div class="btn btn-primary">
                                <%= link_to "Description", character_path(associated_character,  source:"character_show")%>
                            </div>

                </div>
            </div>
        </div>
    </div>






