<div class="container">
  <%= render 'character_detail', character: @character %>
</div>





  <% unless @associated_characters.nil? %>

      <div class="container">
        <h2>Choose the associated <%= @category %>_ </h2>
      </div>


<div class="container cards">
    <% @associated_characters.each do |associated_character| %>
      <div class="col">
        <div class="card py-5" style="width: 18rem;">
          <% if File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.jpg" %>
            <%= image_tag ("#{associated_character.photo_url}.jpg"), id: 'img' %>
          <% elsif File.file? "#{Rails.root}/app/assets/images/#{associated_character.photo_url}.png" %>
            <%= image_tag ("#{associated_character.photo_url}.png"), id: 'img' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"> <%= associated_character.name %> </h5>
            <%= link_to "Pair with this character", new_character_booking_path(@character.id , associated_character_id: associated_character.id), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
